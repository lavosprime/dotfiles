[core]
  editor = vim
[color]
  ui = auto
[merge]
  conflictstyle = diff3
[push]
  default = simple
[alias]
  amend = commit --all --amend --no-edit
  co = checkout
  ds = diff --staged
  ll = log --graph --decorate --branches --pretty='%C(auto)%h %cd %Cblue%an%Creset%C(auto) %d %s' --date=short-local

  rekt = checkout -- .
  sl = log --graph --decorate --branches -n 10 --oneline --invert-grep --grep='AUTOMATION: '
  st = status -s -b
  sync = pull --rebase
